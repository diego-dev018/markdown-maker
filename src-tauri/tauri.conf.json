{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkdownMaker",
  "version": "0.1.0",
  "identifier": "com.markdown-maker.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MarkdownMaker",
        "width": 1300,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/web-app-manifest-192x192.png"
    ]
  }
}
